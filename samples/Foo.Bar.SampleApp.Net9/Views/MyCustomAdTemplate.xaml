<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Foo.Bar.SampleApp.Views.MyCustomAdTemplate">
    <Grid ColumnSpacing="8" RowSpacing="8">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border WidthRequest="200" HeightRequest="200" StrokeThickness="8" Stroke="Purple" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="150" />
            </Border.StrokeShape>
            <Image VerticalOptions="Center" HorizontalOptions="Center" Source="{Binding ImageUri}">
                <Image.Clip>
                    <EllipseGeometry RadiusX="150" RadiusY="150" Center="100,100" />
                </Image.Clip>
            </Image>
        </Border>
        <Border Grid.Column="1" VerticalOptions="End" BackgroundColor="#EEEEEE" StrokeThickness="0" Padding="4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="4" />
            </Border.StrokeShape>
            <Label Text="{Binding Headline}" FontAttributes="Bold" FontSize="18" />
        </Border>
        <Border Grid.Column="1" Grid.Row="1" VerticalOptions="Start" BackgroundColor="#E0E0E0" StrokeThickness="0" Padding="4">
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="4" />
            </Border.StrokeShape>
            <Label Text="{Binding Body}" TextColor="Purple" />
        </Border>
    </Grid>
</ContentView>
